# Django core
DJANGO_SECRET_KEY=change-me
DJANGO_DEBUG=1
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1
DJANGO_CSRF_TRUSTED_ORIGINS=http://localhost,http://127.0.0.1
DJANGO_STATIC_ROOT=staticfiles

# Production security (used when DJANGO_DEBUG=0)
DJANGO_SECURE_SSL_REDIRECT=1
DJANGO_SECURE_HSTS_SECONDS=31536000
DJANGO_SECURE_HSTS_INCLUDE_SUBDOMAINS=1
DJANGO_SECURE_HSTS_PRELOAD=0
DJANGO_USE_X_FORWARDED_PROTO=0

# Project links
DONATE_URL=https://pay.cloudtips.ru/p/ead6cda5
OFFICIAL_REPOSITORY_URL=https://github.com/Overl1te/EndfieldPass

# Cloudflare Turnstile (import endpoint protection)
# For local development keep disabled, or use Cloudflare test keys.
# Test site key:   1x00000000000000000000AA
# Test secret key: 1x0000000000000000000000000000000AA
TURNSTILE_ENABLED=0
TURNSTILE_SITE_KEY=
TURNSTILE_SECRET_KEY=
TURNSTILE_VERIFY_URL=https://challenges.cloudflare.com/turnstile/v0/siteverify
TURNSTILE_TIMEOUT_SECONDS=5.0

# OAuth: Google Drive
GOOGLE_OAUTH_CLIENT_ID=
GOOGLE_OAUTH_CLIENT_SECRET=
GOOGLE_OAUTH_SCOPE=https://www.googleapis.com/auth/drive.file

# OAuth: Yandex Disk
YANDEX_OAUTH_CLIENT_ID=
YANDEX_OAUTH_CLIENT_SECRET=
YANDEX_OAUTH_SCOPE=cloud_api:disk.app_folder

# Optional: force external public base URL for OAuth redirect_uri behind proxy/domain
DJANGO_EXTERNAL_BASE_URL=

# Optional: admin auto-create (used by manage.py ensure_superuser from start.bat)
DJANGO_SUPERUSER_USERNAME=
DJANGO_SUPERUSER_PASSWORD=
DJANGO_SUPERUSER_EMAIL=
